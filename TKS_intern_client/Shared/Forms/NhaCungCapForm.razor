@using Microsoft.AspNetCore.Components
@using AntDesign
@using TKS_intern_shared.ViewModels.NhaCungCaps

<AntDesign.Form Model="Model" OnFinish="OnValidSubmit" Layout="FormLayout.Vertical">
    <DataAnnotationsValidator/>
    <Row Gutter="16">
        <Col Span="12">
        <FormItem Label="Mã nhà cung cấp" Name="@nameof(Model.MaNhaCungCap)" Required>
            <Input @bind-Value="Model.MaNhaCungCap" />
        </FormItem>
        </Col>

        <Col Span="12">
        <FormItem Label="Tên nhà cung cấp" Name="@nameof(Model.TenNhaCungCap)" Required>
            <Input @bind-Value="Model.TenNhaCungCap" />
        </FormItem>
        </Col>
    </Row>

    <Row>
        <Col Span="24">
        <FormItem Label="Ghi chú" Name="@nameof(Model.GhiChu)">
            <TextArea @bind-Value="Model.GhiChu" Rows="4" />
        </FormItem>
        </Col>
    </Row>

    <Row>
        <Col Span="24">
        <FormItem>
            <Button Type="ButtonType.Primary" HtmlType="submit">Lưu</Button>
            <Button Class="ml-2" @onclick="OnCancelClicked">Hủy</Button>
        </FormItem>
        </Col>
    </Row>
</AntDesign.Form>

@code {
    [Parameter, EditorRequired]
    public NhaCungCapSaveVM Model { get; set; } = new();

    [Parameter]
    public EventCallback OnValidSubmitCallback { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private async Task OnValidSubmit()
    {
        if (OnValidSubmitCallback.HasDelegate)
            await OnValidSubmitCallback.InvokeAsync();
    }

    private async Task OnCancelClicked()
    {
        if (OnCancel.HasDelegate)
            await OnCancel.InvokeAsync();
    }
}
