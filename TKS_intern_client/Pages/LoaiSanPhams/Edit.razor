@page "/loaisanpham/edit/{id:int}"
@using TKS_intern_client.Services
@using TKS_intern_client.Shared.Forms
@using TKS_intern_shared.ViewModels.LoaiSanPhams
@inject ApiClient Api
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageHeader Class="site-page-header p-0" Title="Cập nhật Loại Sản Phẩm" Subtitle="Quản lý loại sản phẩm">
    <PageHeaderBreadcrumb>
        <Breadcrumb>
            <BreadcrumbItem>Trang chủ</BreadcrumbItem>
            <BreadcrumbItem>
                <a href="/loaisanpham">Loại Sản Phẩm</a>
            </BreadcrumbItem>
            <BreadcrumbItem>Cập nhật</BreadcrumbItem>
        </Breadcrumb>
    </PageHeaderBreadcrumb>
</PageHeader>


@if (model == null)
{
    <p><em>Đang tải dữ liệu...</em></p>
}
else
{
    <LoaiSanPhamForm Model="model"
                     OnValidSubmitCallback="HandleValidSubmit"
                     OnCancel="Cancel" />
}

@code {
    [Parameter] public int id { get; set; }

    private LoaiSanPhamUpdateVM? model;

    protected override async Task OnInitializedAsync()
    {
        // Lấy dữ liệu hiện có từ API
        var existing = await Api.GetAsync<LoaiSanPhamVM>($"api/LoaiSanPhams/{id}");
        if (existing is not null)
        {
            model = new LoaiSanPhamUpdateVM
            {
                Id = existing.Id,
                MaLoaiSanPham = existing.MaLoaiSanPham,
                TenLoaiSanPham = existing.TenLoaiSanPham,
                GhiChu = existing.GhiChu
            };
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Không tìm thấy loại sản phẩm.");
            Navigation.NavigateTo("/loaisanpham");
        }
    }

    private async Task HandleValidSubmit()
    {
        var response = await Api.PutAsync($"api/LoaiSanPhams/{id}", model);
        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/loaisanpham");
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
        {
            var errorResponse = await response.Content.ReadFromJsonAsync<ErrorResponse>();
            _message.Error(errorResponse!.Message);
        }
        else
        {
            Console.WriteLine("Cập nhật thất bại: " + response.StatusCode);
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/loaisanpham");
    }
}
