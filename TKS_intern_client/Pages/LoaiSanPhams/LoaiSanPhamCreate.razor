@page "/loaisanpham/create"
@using TKS_intern_client.Services
@using TKS_intern_client.Shared.Forms
@using TKS_intern_shared.ViewModels.LoaiSanPhams
@inject ApiClient Api
@inject NavigationManager Navigation

<h3>Thêm mới Loại Sản Phẩm</h3>

<LoaiSanPhamForm Model="model"
                 OnValidSubmitCallback="HandleValidSubmit"
                 OnCancel="Cancel" />

@code {
    private LoaiSanPhamSaveVM model = new();

    private async Task HandleValidSubmit()
    {
        var response = await Api.PostAsync("api/LoaiSanPhams", model);
        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/loaisanpham");
        }
        else
        {
            Console.WriteLine("Thêm thất bại: " + response.StatusCode);
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/loaisanpham");
    }
}
