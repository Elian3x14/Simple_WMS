@page "/kho/create"
@using TKS_intern_client.Services
@using TKS_intern_shared.ViewModels.Khos
@using TKS_intern_client.Shared.Forms
@inject ApiClient Api
@inject NavigationManager Navigation

<h3>Thêm mới Kho</h3>

<KhoForm Model="model"
         OnValidSubmitCallback="HandleValidSubmit"
         OnCancel="Cancel" />

@code {
    private KhoCreateVM model = new();

    private async Task HandleValidSubmit()
    {
        var response = await Api.PostAsync("api/Khos", model);
        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/kho");
        }
        else
        {
            Console.WriteLine("Thêm thất bại: " + response.StatusCode);
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/kho");
    }
}
