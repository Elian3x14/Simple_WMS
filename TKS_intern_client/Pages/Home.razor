@page "/"
@using AntDesign
@layout GuestLayout;


@inject NavigationManager NavigationManager

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h2>Quản lý kho hàng chuyên nghiệp</h2>
        <p class="hero-description">
            Hệ thống WMS giúp doanh nghiệp quản lý kho hàng hiệu quả, tiết kiệm thời gian và chi phí
        </p>
        <div class="hero-actions">
            <Button Type="ButtonType.Primary" Size="ButtonSize.Large">Dùng thử miễn phí</Button>
            <Button Size="ButtonSize.Large">Xem demo</Button>
        </div>
    </div>
    <div class="hero-image">
        <img src="https://cdn.dribbble.com/userupload/3491009/file/original-cb0844334443bd6669ac5545d9bfedd8.jpg?resize=1504x1128&vertical=center" alt="Giao diện Tiên Khanh WMS" />
    </div>
</section>

<!-- Features Section -->
<section id="features" class="section features-section">
    <h2 class="section-title">Tính năng nổi bật</h2>
    <p class="section-subtitle">Những tính năng giúp quản lý kho của bạn hiệu quả hơn</p>

    <Row Gutter="16" Class="features-grid">
        <Col Span="8" Xs="24" Sm="12" Md="8">
        <Card Class="feature-card">
            <div class="feature-icon">
                <Icon Type="inbox" Theme="IconThemeType.Outline" Style="font-size: 48px;" />
            </div>
            <h3>Quản lý tồn kho</h3>
            <p>Theo dõi chính xác số lượng hàng tồn kho theo thời gian thực</p>
        </Card>
        </Col>
        <Col Span="8" Xs="24" Sm="12" Md="8">
        <Card Class="feature-card">
            <div class="feature-icon">
                <Icon Type="barcode" Theme="IconThemeType.Outline" Style="font-size: 48px;" />
            </div>
            <h3>Quét mã vạch</h3>
            <p>Hỗ trợ quét mã vạch để nhập/xuất kho nhanh chóng</p>
        </Card>
        </Col>
        <Col Span="8" Xs="24" Sm="12" Md="8">
        <Card Class="feature-card">
            <div class="feature-icon">
                <Icon Type="line-chart" Theme="IconThemeType.Outline" Style="font-size: 48px;" />
            </div>
            <h3>Báo cáo thông minh</h3>
            <p>Tự động tạo báo cáo tồn kho, xuất nhập tồn theo nhiều tiêu chí</p>
        </Card>
        </Col>
        <Col Span="8" Xs="24" Sm="12" Md="8">
        <Card Class="feature-card">
            <div class="feature-icon">
                <Icon Type="team" Theme="IconThemeType.Outline" Style="font-size: 48px;" />
            </div>
            <h3>Phân quyền đa cấp</h3>
            <p>Phân quyền chi tiết cho từng nhân viên, từng chức năng</p>
        </Card>
        </Col>
        <Col Span="8" Xs="24" Sm="12" Md="8">
        <Card Class="feature-card">
            <div class="feature-icon">
                <Icon Type="sync" Theme="IconThemeType.Outline" Style="font-size: 48px;" />
            </div>
            <h3>Đồng bộ đa nền tảng</h3>
            <p>Làm việc mọi lúc mọi nơi trên cả web và mobile</p>
        </Card>
        </Col>
        <Col Span="8" Xs="24" Sm="12" Md="8">
        <Card Class="feature-card">
            <div class="feature-icon">
                <Icon Type="alert" Theme="IconThemeType.Outline" Style="font-size: 48px;" />
            </div>
            <h3>Cảnh báo tự động</h3>
            <p>Cảnh báo khi hàng hóa sắp hết hạn, sắp hết hàng</p>
        </Card>
        </Col>
    </Row>
</section>

<!-- Benefits Section -->
<section id="benefits" class="section benefits-section">
    <h2 class="section-title">Lợi ích khi sử dụng</h2>
    <p class="section-subtitle">Tiên Khanh - WMS mang lại những giá trị gì cho doanh nghiệp của bạn</p>

    <Row Gutter="16" Class="benefits-grid">
        <Col Span="12" Xs="24" Sm="24" Md="12">
        <div class="benefit-item">
            <h3><Icon Type="check-circle" Theme="IconThemeType.Fill" Style="color: #52c41a;" /> Giảm chi phí quản lý</h3>
            <p>Tối ưu hóa quy trình quản lý kho, giảm thiểu nhân sự và thời gian kiểm kê</p>
        </div>
        <div class="benefit-item">
            <h3><Icon Type="check-circle" Theme="IconThemeType.Fill" Style="color: #52c41a;" /> Tăng độ chính xác</h3>
            <p>Hạn chế tối đa sai sót trong quá trình nhập/xuất kho với hệ thống tự động</p>
        </div>
        <div class="benefit-item">
            <h3><Icon Type="check-circle" Theme="IconThemeType.Fill" Style="color: #52c41a;" /> Tiết kiệm thời gian</h3>
            <p>Giảm 80% thời gian kiểm kê, tìm kiếm hàng hóa trong kho</p>
        </div>
        </Col>
        <Col Span="12" Xs="24" Sm="24" Md="12">
        <img src="https://www.cin7.com/hs-fs/hubfs/Imported_Blog_Media/Warehouse-management-system-hero-image-2x-Jan-31-2025-11-12-23-7435-PM.jpg?width=700&name=Warehouse-management-system-hero-image-2x-Jan-31-2025-11-12-23-7435-PM.jpg" alt="Lợi ích WMS" class="benefits-image" />
        </Col>
    </Row>
</section>

<!-- Pricing Section -->
<section id="pricing" class="section pricing-section">
    <h2 class="section-title">Bảng giá linh hoạt</h2>
    <p class="section-subtitle">Chọn gói dịch vụ phù hợp với quy mô doanh nghiệp của bạn</p>

    <Row Gutter="16" Class="pricing-grid">
        <Col Span="8" Xs="24" Sm="12" Md="8">
        <Card Class="pricing-card">
            <div class="pricing-header">
                <h3>Cơ bản</h3>
                <div class="price">1.500.000<small>đ/tháng</small></div>
            </div>
            <Divider />
            <ul class="pricing-features">
                <li><Icon Type="check" /> Quản lý tối đa 1 kho</li>
                <li><Icon Type="check" /> 5 tài khoản người dùng</li>
                <li><Icon Type="check" /> Báo cáo cơ bản</li>
                <li><Icon Type="close" /> Không hỗ trợ API</li>
                <li><Icon Type="close" /> Không hỗ trợ mobile</li>
            </ul>
            <Button Type="ButtonType.Primary" Block="true">Đăng ký ngay</Button>
        </Card>
        </Col>
        <Col Span="8" Xs="24" Sm="12" Md="8">
        <Card Class="pricing-card featured">
            <div class="pricing-badge">Phổ biến</div>
            <div class="pricing-header">
                <h3>Tiêu chuẩn</h3>
                <div class="price">3.500.000<small>đ/tháng</small></div>
            </div>
            <Divider />
            <ul class="pricing-features">
                <li><Icon Type="check" /> Quản lý tối đa 3 kho</li>
                <li><Icon Type="check" /> 15 tài khoản người dùng</li>
                <li><Icon Type="check" /> Báo cáo nâng cao</li>
                <li><Icon Type="check" /> Hỗ trợ API cơ bản</li>
                <li><Icon Type="check" /> Ứng dụng mobile</li>
            </ul>
            <Button Type="ButtonType.Primary" Block="true">Đăng ký ngay</Button>
        </Card>
        </Col>
        <Col Span="8" Xs="24" Sm="12" Md="8">
        <Card Class="pricing-card">
            <div class="pricing-header">
                <h3>Doanh nghiệp</h3>
                <div class="price">Liên hệ</div>
            </div>
            <Divider />
            <ul class="pricing-features">
                <li><Icon Type="check" /> Không giới hạn kho</li>
                <li><Icon Type="check" /> Không giới hạn người dùng</li>
                <li><Icon Type="check" /> Báo cáo tùy chỉnh</li>
                <li><Icon Type="check" /> API đầy đủ</li>
                <li><Icon Type="check" /> Hỗ trợ 24/7</li>
            </ul>
            <Button Type="ButtonType.Primary" Block="true">Liên hệ tư vấn</Button>
        </Card>
        </Col>
    </Row>
</section>

<!-- Testimonials Section -->
<section class="section testimonials-section">
    <h2 class="section-title">Khách hàng nói gì về chúng tôi</h2>
    <p class="section-subtitle">Những phản hồi từ khách hàng đã sử dụng Tiên Khanh - WMS</p>

    <Carousel DotPosition="CarouselDotPosition.Bottom" Autoplay="TimeSpan.FromSeconds(2)">
        <CarouselSlick>
            <div class="testimonial-item">
                <div class="testimonial-content">
                    <p>"Tiên Khanh - WMS đã giúp chúng tôi giảm 30% thời gian quản lý kho và hạn chế tối đa sai sót trong quá trình xuất nhập hàng."</p>
                    <div class="testimonial-author">
                        <Avatar Size="AvatarSize.Large" Icon="UserOutlined" />
                        <div class="author-info">
                            <strong>Nguyễn Văn A</strong>
                            <span>Giám đốc Công ty TNHH ABC</span>
                        </div>
                    </div>
                </div>
            </div>
        </CarouselSlick>
        <CarouselSlick>
            <div class="testimonial-item">
                <div class="testimonial-content">
                    <p>"Hệ thống báo cáo của Tiên Khanh - WMS rất mạnh mẽ, giúp chúng tôi có cái nhìn tổng quan về tình hình tồn kho để ra quyết định kinh doanh."</p>
                    <div class="testimonial-author">
                        <Avatar Size="AvatarSize.Large" Icon="UserOutlined" />
                        <div class="author-info">
                            <strong>Trần Thị B</strong>
                            <span>Quản lý kho Công ty XYZ</span>
                        </div>
                    </div>
                </div>
            </div>
        </CarouselSlick>

    </Carousel>
</section>

<!-- Contact Section -->
<section id="contact" class="section contact-section">
    <h2 class="section-title">Liên hệ với chúng tôi</h2>
    <p class="section-subtitle">Để được tư vấn và hỗ trợ tốt nhất</p>

    <Row Gutter="16">
        <Col Span="12" Xs="24" Sm="24" Md="12">
        <Form Model="@contactForm" Layout="FormLayout.Vertical" OnFinish="HandleSubmit">
            <FormItem Label="Họ và tên">
                <Input @bind-Value="@contactForm.Name" Placeholder="Nhập họ và tên" />
            </FormItem>
            <FormItem Label="Email">
                <Input @bind-Value="@contactForm.Email" Placeholder="Nhập email" />
            </FormItem>
            <FormItem Label="Số điện thoại">
                <Input @bind-Value="@contactForm.Phone" Placeholder="Nhập số điện thoại" />
            </FormItem>
            <FormItem Label="Nội dung">
                <TextArea Rows="4" @bind-Value="@contactForm.Message" Placeholder="Nhập nội dung liên hệ" />
            </FormItem>
            <FormItem>
                <Button Type="ButtonType.Primary" HtmlType="submit">Gửi liên hệ</Button>
            </FormItem>
        </Form>
        </Col>
        <Col Span="12" Xs="24" Sm="24" Md="12">
        <div class="contact-info">
            <h3><Icon Type="home" Theme="IconThemeType.Fill" /> Công ty TNHH Tiên Khanh</h3>
            <p><Icon Type="environment" Theme="IconThemeType.Fill" /> Địa chỉ: Số 123, đường ABC, quận XYZ, TP. Hồ Chí Minh</p>
            <p><Icon Type="phone" Theme="IconThemeType.Fill" /> Điện thoại: 0901.234.567</p>
            <p><Icon Type="mail" Theme="IconThemeType.Fill" /> Email: contact@tienkhanh-wms.com</p>
        </div>
        </Col>
    </Row>
</section>


@code {
    

    private ContactForm contactForm = new ContactForm();

    private class ContactForm
    {
        public string Name { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Phone { get; set; } = string.Empty;
        public string Message { get; set; } = string.Empty;
    }

    private void HandleSubmit()
    {
        // Xử lý submit form liên hệ
        Console.WriteLine("Form submitted");
    }
}