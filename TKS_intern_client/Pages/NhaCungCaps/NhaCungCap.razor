@page "/nhacungcap"
@using TKS_intern_client.Services
@using TKS_intern_shared.ViewModels.NhaCungCaps
@inject ApiClient Api
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Nhà Cung Cấp</PageTitle>

<h1>Danh sách Nhà Cung Cấp</h1>

<button class="btn btn-primary mb-3" @onclick="CreateNhaCungCap">Thêm mới</button>

@if (nhaCungCaps == null)
{
    <p><em>Đang tải...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Mã Nhà Cung Cấp</th>
                <th>Tên Nhà Cung Cấp</th>
                <th>Ghi Chú</th>
                <th>Ngày Tạo</th>
                <th>Ngày Cập Nhật</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in nhaCungCaps)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.MaNhaCungCap</td>
                    <td>@item.TenNhaCungCap</td>
                    <td>@item.GhiChu</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-1" @onclick="() => EditNhaCungCap(item.Id)">Sửa</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteNhaCungCap(item.Id)">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<NhaCungCapVM>? nhaCungCaps;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        nhaCungCaps = await Api.GetAsync<List<NhaCungCapVM>>("api/NhaCungCaps");
    }

    private void CreateNhaCungCap()
    {
        Navigation.NavigateTo("/nhacungcap/create");
    }

    private void EditNhaCungCap(int id)
    {
        Navigation.NavigateTo($"/nhacungcap/edit/{id}");
    }

    private async Task DeleteNhaCungCap(int id)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", $"Bạn có chắc muốn xóa nhà cung cấp ID {id}?");
        if (confirm)
        {
            var response = await Api.DeleteAsync($"api/NhaCungCaps/{id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadData(); // reload lại danh sách
            }
            else
            {
                Console.WriteLine($"Xóa thất bại: {response.StatusCode}");
            }
        }
    }
}
