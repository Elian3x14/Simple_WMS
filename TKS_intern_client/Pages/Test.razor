@page "/validation-demo"
@using System.ComponentModel.DataAnnotations
@using AntDesign

<Form Model="@model" OnFinish="HandleSubmit">
    <DataAnnotationsValidator />

    <FormItem Label="Họ và tên" 
              Help="@context.FullName">
        <Input @bind-Value="@model.FullName" />
    </FormItem>

    <FormItem Label="Email">
        <Input @bind-Value="@model.Email" />
        <ValidationMessage For="@(() => model.Email)" />
    </FormItem>

    <FormItem>
        <Button Type="ButtonType.Primary" HtmlType="submit">Gửi</Button>
    </FormItem>
</Form>

@code {
    private UserModel model = new();

    private void HandleSubmit()
    {
        Console.WriteLine("Submit form");
    }

    public class UserModel
    {
        [Required(ErrorMessage = "Vui lòng nhập họ tên")]
        public string FullName { get; set; }

        [Required(ErrorMessage = "Vui lòng nhập email")]
        [EmailAddress(ErrorMessage = "Email không hợp lệ")]
        public string Email { get; set; }
    }
}